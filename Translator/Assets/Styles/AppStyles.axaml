<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Style Selector=":is(TopLevel)">
		<Setter Property="FontWeight" Value="{StaticResource ControlContentThemeFontWeight}"/>
		<Setter Property="FontSize" Value="{StaticResource ControlContentThemeFontSize}"/>		
	</Style>
	
	<Style Selector="TextBox[IsReadOnly=True]">
		<Setter Property="Background" Value="{StaticResource ReadonlyTextColor}"/>
	</Style>
	<Style Selector="TextBox[IsReadOnly=True]:pointerover /template/ Border#PART_BorderElement">
		<Setter Property="Background" Value="{StaticResource FocusedReadonlyTextColor}"/>
	</Style>
	<Style Selector="TextBox[IsReadOnly=True]:focus /template/ Border#PART_BorderElement">
		<Setter Property="Background" Value="{StaticResource FocusedReadonlyTextColor}"/>
	</Style>

</Styles>
